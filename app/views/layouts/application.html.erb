<!DOCTYPE html>
<html>
  <head>
    <title>HerokuTestApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class ="container">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
          <ul class="nav navbar-nav">
          <% if logged_in? %>
            <li>
              <a href="/">Home</a>
            </li>    
            <li>
              <a href="/blogs"><span></span> Index</a>
            </li>
            <li>
              <a href="/blogs/new"><span></span> New_Blog</a>
            </li>
            <li>
              <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
            </li>
            <li>
              <%= link_to "Logout", session_path(current_user.id), method: :delete %>
            </li>
             <li><a href="/contacts/new">お問い合わせ</a></li>
          </ul>
           <% else %>
           <li>
              <a href="/">Home</a>
            </li>  
            <li>
              <a href="/users/new"><span></span> Sign up</a>
            </li>
            <li>
              <a href="/sessions/new"><span ></span> Login</a>
            </li>
            <li>
              <a href="/about"><span ></span> About</a>
            </li>
          <% end %>
      </div>
    </nav>
    <%= yield %>
   <footer class="container-fluid text-center" style="color:blue;">
    <p>Phase3_Bootstrap  2018 Dive_Into_Code_Student.</p>
  </footer>
    
    </div> 
  </body>
</html>
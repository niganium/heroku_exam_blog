<div class ="jumbotron text-center"style ="height:300px; color:white; text-shadow: 2px 2px 4px #666; 
 background:url(/assets/about-bg.jpg);  background-size:cover;">
  <h1>ブログ一覧</h1>
  <p>ブログ機能のお試しアプリです</p>
</div>

<div class =" container-fluid h4" 
<div class ="row">
<% @blogs.each do |blog| %>

    <div class ="col-xs-6 col-ms-2 col-md-2 col-lg-1">text:  <%= blog.title %></div>
    
    <div class ="col-xs-6 col-ms-6 col-md-6 col-lg-3 ctt">content:  <%= blog.content %></div>
    

    <div class="btn btn-default col-xs-6 col-ms-2 col-md-2 col-lg-1">
        <%= link_to "編集", edit_blog_path(blog.id) %>
    </div>
    
    <div  class="btn btn-default col-xs-6 col-ms-2 col-md-2 col-lg-1">
        <%= link_to '削除', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
    </div>
    
<% end %>

</div>
</div>

